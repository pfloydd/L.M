<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="matricula">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="personal">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="dni" type="xs:string"></xs:element>
                            <xs:element name="nombre" type="xs:string"></xs:element>
                            <xs:element name="titulacion"></xs:element>
                            <xs:element name="curso_academico" type="xs:string"></xs:element>
                            <xs:element name="domicilios">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="domicilio"></xs:element>
                                            <xs:element name="nombre" type="xs:string"></xs:element>
                                    </xs:sequence>
                                    <xs:attribute name="tipo"></xs:attribute>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="personal"></xs:element>
                            <xs:element name="pago">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="tipo_matricula"></xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>